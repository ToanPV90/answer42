# Production Environment Configuration for Answer42
# Replace placeholder values with your actual production credentials

# AI API Keys (Production)
OPENAI_API_KEY=your-production-openai-api-key-here
ANTHROPIC_API_KEY=your-production-anthropic-api-key-here
PERPLEXITY_API_KEY=your-production-perplexity-api-key-here

# Related Paper Discovery APIs
SEMANTIC_SCHOLAR_API_KEY=
# Note: Semantic Scholar API is free and doesn't require an API key for basic usage
# For higher rate limits, you can request a key at: https://www.semanticscholar.org/product/api

# Discovery Configuration (Production optimized)
DISCOVERY_ENABLED=true
DISCOVERY_MAX_PAPERS_PER_SOURCE=100
DISCOVERY_CACHE_DURATION_HOURS=48
DISCOVERY_RATE_LIMIT_ENABLED=true

# JWT Configuration (Production)
JWT_SECRET=your-production-jwt-secret-base64-encoded-here

# Stripe Configuration (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_your-production-publishable-key-here
STRIPE_SECRET_KEY=sk_live_your-production-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret-here

# Supabase Configuration (Production Cloud)
# Replace YOUR_PROJECT_REF with your actual Supabase project reference
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key-here

# Database Configuration (Production Cloud)
# Replace YOUR_PROJECT_REF with your actual Supabase project reference
# Replace YOUR_DB_PASSWORD with your actual database password
SUPABASE_DB_URL=postgresql://postgres:YOUR_DB_PASSWORD@YOUR_PROJECT_REF.supabase.co:5432/postgres?sslmode=require

# Database Connection Variables (for Spring Boot)
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@YOUR_PROJECT_REF.supabase.co:5432/postgres?sslmode=require
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=YOUR_DB_PASSWORD

# Production Performance Settings
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=10
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=600000
HIKARI_MAX_LIFETIME=1800000

# Production Security Settings
SERVER_PORT=8080
SERVER_SSL_ENABLED=false
# Note: SSL should be handled by your reverse proxy/load balancer in production

# Production Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_SAMJDTECHNOLOGIES=INFO
LOGGING_LEVEL_SQL=WARN

# Production File Upload Limits
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=110MB
LARGE_FILE_THRESHOLD=104857600

# Production Thread Pool Settings
TASK_EXECUTION_CORE_SIZE=10
TASK_EXECUTION_MAX_SIZE=50
TASK_EXECUTION_QUEUE_CAPACITY=100

# Production Rate Limiting (Higher limits for production)
DISCOVERY_RATE_LIMIT_CROSSREF_REQUESTS_PER_SECOND=50
DISCOVERY_RATE_LIMIT_SEMANTIC_SCHOLAR_REQUESTS_PER_MINUTE=200
DISCOVERY_RATE_LIMIT_PERPLEXITY_REQUESTS_PER_MINUTE=20

# Production Monitoring
MANAGEMENT_METRICS_EXPORT_ENABLED=true
MANAGEMENT_METRICS_EXPORT_STEP=PT1M
MANAGEMENT_HEALTH_SHOW_DETAILS=when-authorized

# Production Vaadin Settings
VAADIN_PRODUCTION_MODE=true
VAADIN_CLOSE_IDLE_SESSIONS=true
VAADIN_HEARTBEAT_INTERVAL=300
VAADIN_LAUNCH_BROWSER=false

# Production Spring Profiles
SPRING_PROFILES_ACTIVE=production

# Production JPA Settings
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
HIBERNATE_DDL_AUTO=validate
